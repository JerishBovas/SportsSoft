@model Customer
@{
    ViewData["Title"] = "Get Customer";
}

<h2>Get Customer</h2>

<form asp-action="List" method="post" asp-antiforgery="true">
    <div class="form-group">
        <select class="form-control" asp-for="CustomerId" asp-items="ViewBag.Customers">
            <option value="0" selected>Select a Customer</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
</form>
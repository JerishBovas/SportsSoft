@model Product
@{
    ViewData["Title"] = "List Registrations";
}

<h2 style="display:inline">Customer: @ViewBag.Name</h2>
<br />
<br />
<h3>Registrations</h3>

<table class="table mt-3">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Registrations)
        {
            <tr>
                <td>
                    @item.Product.Name
                </td>
                <td>
                    <a class="text-secondary" asp-action="Delete" asp-route-id="@item.RegistrationId" asp-route-slug="@item.Slug"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Product</h3>
<form asp-action="List" method="post" asp-antiforgery="true">
    <div class="form-group">
        <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Products">
            <option value="0" selected>Select a Product</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
</form>
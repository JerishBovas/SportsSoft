@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Manager";
}
<style>
    tbody > tr:hover {
        background-color: #daf1fc;
    }
</style>
<h2 class="float-left">Product Manager</h2>

<p>
    <a class="btn btn-primary float-right" role="button" asp-action="Add">Add Product</a>
</p>
<br style="clear:both" />
<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.ProductId" asp-route-slug="@item.Slug">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    <a class="text-secondary" asp-action="Edit" asp-route-id="@item.ProductId" asp-route-slug="@item.Slug"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.ProductId" asp-route-slug="@item.Slug"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model Incident
@{
    ViewData["Title"] = "Edit Incident";
}

<h2>Edit Incident</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
                <input type="hidden" asp-for="Title" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Technician)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Technician.Name)
                <input type="hidden" asp-for="TechnicianId" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FirstName)
                <input type="hidden" asp-for="CustomerId" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
                <input type="hidden" asp-for="ProductId" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOpened)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOpened)
                <input type="hidden" asp-for="DateOpened" />
            </dd>
        </dl>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateClosed" class="control-label"></label>
            <input asp-for="DateClosed" class="form-control" />
            <span asp-validation-for="DateClosed" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Manager">Cancel</a>
</div>

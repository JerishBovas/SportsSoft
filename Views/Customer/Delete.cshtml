@model Customer
@{
}

<h2>Delete Customer</h2>

<p>Are you sure want to delete @Model.FirstName @Model.LastName ?</p>

<form asp-controller="Customer" asp-action="Delete" asp-route-id="@Model.CustomerId" method="post">
    <button type="submit">Yes</button>
</form>
<a asp-controller="Customer" asp-action="Manager" asp-route-id="@Model.CustomerId" asp-route-slug="@Model.Slug">No</a>

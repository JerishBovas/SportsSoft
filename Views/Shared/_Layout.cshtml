<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Sports Soft</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/c11ddac06e.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light fixed-top shadow-sm mb-5 bg-white rounded">
            <a href="/" class="navbar-brand">
                <img src="https://img.icons8.com/doodle/48/000000/basketball--v1.png" />
            </a>
            <a href="/" class="navbar-brand">
                <h1 class="m-auto" style="font-family:cursive;">SPORTS SOFT</h1>
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="home" class="nav-link" href="/Home/Index"><h5 class="m-auto">Home</h5></a>
                </li>
                <li class="nav-item">
                    <a id="product" class="nav-link" href="/Product/Manager"><h5 class="m-auto">Products</h5></a>
                </li>
                <li class="nav-item">
                    <a id="technician" class="nav-link" href="/Technician/Manager"><h5 class="m-auto">Technicians</h5></a>
                </li>
                <li class="nav-item">
                    <a id="customer" class="nav-link" href="/Customer/Manager"><h5 class="m-auto">Customers</h5></a>
                </li>
                <li class="nav-item">
                    <a id="incident" class="nav-link" href="/Incident/Manager"><h5 class="m-auto">Incidents</h5></a>
                </li>
            </ul>
        </nav>
    </header>
    <div style="margin-top:100px" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Jerish Bradly Bovas
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

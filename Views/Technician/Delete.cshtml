@model Technician

@{
    ViewData["Title"] = "Delete " + Model.Name;
}
<style>
    #technician {
        pointer-events: none;
        cursor: default;
        text-decoration: none;
        color: black;
    }
</style>

<h2>Delete Technician</h2>
<br />
<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
    <br />
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TechnicianId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Manager">Cancel</a>
    </form>
</div>
